{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "sourceMap": true,
    "incremental": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
